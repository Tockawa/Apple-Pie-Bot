{
    "name": "apple-pie",
    "version": "1.2.0",
    "description": "Just an usual Discord Bot, she might be a pie made of apples, but she's also a bot.",
    "main": "src/bot.ts",
    "scripts": {
        "preinstall": "npm i @types/node@latest typescript@latest ts-node@latest && npm run build-all",
        "start": "ts-node src/bot.ts",
        "build": "tsc",
        "build-wok": "tsc -p modules/wokcommands/tsconfig.json",
        "build-cliprxy": "tsc -p modules/cliprxyz/tsconfig.json",
        "build-all": "npm run build-wok && npm run build-cliprxy && npm run build",
        "start-built": "node dist/bot.js",
        "dev": "nodemon src/bot.ts",
        "build-all-watch": "npm run build-wok --watch & npm run build-cliprxy --watch & npm run build --watch"
    },
    "keywords": [
        "discord",
        "bot",
        "typescript",
        "apple pie",
        "discord.js",
        "discordjs",
        "djs"
    ],
    "author": "тоска",
    "contributors": [
        "Tockawa",
        "Dixon"
    ],
    "license": "MIT",
    "dependencies": {
        "@discordjs/rest": "^1.3.0",
        "@types/bcrypt": "^5.0.0",
        "@types/cron": "^2.0.0",
        "@types/node": "^18.11.15",
        "@types/speakeasy": "^2.0.7",
        "bcrypt": "^5.1.0",
        "cheerio": "^1.0.0-rc.12",
        "cliprxyz": "file:modules/cliprxyz",
        "cron": "^2.1.0",
        "discord.js": "^14.6.0",
        "dotenv": "^16.0.3",
        "moment": "^2.29.4",
        "mongoose": "^6.7.4",
        "node-fetch": "^2.6.7",
        "request": "^2.88.2",
        "speakeasy": "^2.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4",
        "wokcommands": "file:modules/wokcommands"
    },
    "nodemonConfig": {
        "ignore": [
            "node_modules",
            "dist"
        ],
        "watch": [
            "src",
            "types",
            "modules",
            "package.json"
        ],
        "ext": "ts,json",
        "exec": "npm run build-all-watch & npm run start",
        "execMap": {
            "ts": "ts-node"
        },
        "verbose": true,
        "execOptions": {
            "env": {
                "NODE_ENV": "development"
            }
        }
    }
}
